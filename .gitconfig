[user]
    name = Evan Riley
    email = evan@evanriley.net
    signingkey = ~/.ssh/id_ed25519.pub # Used ~ for cross-platform safety

[core]
    excludesfile = ~/.gitignore
    pager = delta
    # Performance & whitespace
    autocrlf = false
    safecrlf = false
    filemode = false
    trustctime = false

[init]
    defaultBranch = main

[display]
    # Moves the sort to a more global display logic if supported
    ui = auto

[column]
    ui = auto

[branch]
    sort = -committerdate
    autosetupRebase = always

[fetch]
    prune = true

[push]
    default = tracking
    autoSetupRemote = true # Automatically sets up tracking for new branches

[pull]
    rebase = true

[rebase]
    autoStash = true

[merge]
    conflictstyle = diff3

[mergetool]
    keepBackup = false

[diff]
    tool = kitty
    guitool = kitty

[difftool]
    prompt = false
    trustExitCode = true

[difftool "kitty"]
    # 'kitten diff' is the correct modern command
    cmd = kitten diff $LOCAL $REMOTE

[delta]
    navigate = true
    dark = true

[interactive]
    diffFilter = delta --color-only

[commit]
    gpgsign = true

[gpg]
    program = gpg2
    format = ssh

[help]
    autocorrect = 1

[rerere]
    enabled = true

[submodule]
    recurse = true

[github]
    user = evanriley

[hub]
    protocol = https

[fsck]
    zeroPaddedFilemode = ignore
